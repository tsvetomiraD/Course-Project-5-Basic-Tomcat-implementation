<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>PostsInfo</servlet-name>
    <servlet-class>PostsInfo</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>CommentsInfo</servlet-name>
    <servlet-class>CommentsInfo</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>PostsInfo</servlet-name>
    <url-pattern>/posts/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>CommentsInfo</servlet-name>
    <url-pattern>/comments</url-pattern>
  </servlet-mapping>
</web-app>
